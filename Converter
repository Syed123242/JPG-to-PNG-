<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Auto JPG to PNG Converter</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      text-align: center;
      margin-top: 50px;
    }
    input[type="file"] {
      margin: 20px auto;
    }
    a {
      display: none;
      margin-top: 20px;
      font-size: 18px;
      text-decoration: none;
      color: #007bff;
    }
  </style>
</head>
<body>

  <h1>Auto JPG to PNG Converter</h1>
  <p>Select a JPG file to automatically convert it to PNG:</p>
  <input type="file" id="upload" accept="image/jpeg">
  <canvas id="canvas" style="display:none;"></canvas>
  <br>
  <a id="downloadLink">Download PNG</a>

  <script>
    const upload = document.getElementById('upload');
    const canvas = document.getElementById('canvas');
    const downloadLink = document.getElementById('downloadLink');

    upload.addEventListener('change', function () {
      const file = this.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function (e) {
        const img = new Image();
        img.onload = function () {
          canvas.width = img.width;
          canvas.height = img.height;
          const ctx = canvas.getContext('2d');
          ctx.drawImage(img, 0, 0);
          const pngData = canvas.toDataURL('image/png');

          downloadLink.href = pngData;
          downloadLink.download = 'converted.png';
          downloadLink.style.display = 'inline';
          downloadLink.textContent = 'Download PNG';
        };
        img.src = e.target.result;
      };
      reader.readAsDataURL(file);
    });
  </script>

</body>
</html>
